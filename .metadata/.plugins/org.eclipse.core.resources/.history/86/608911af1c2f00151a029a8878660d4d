import java.util.ArrayList;

public class Model {
	private String code ="";
	private float xLoc =0;
	private float yLoc =0;
	private float zLoc=0;
	private float xAngle =0;
	private float yAngle =0;
	private float zAngle =0;
	private ArrayList<Model> union = new ArrayList<Model>();
	private ArrayList<Model> difference = new ArrayList<Model>();
	private ArrayList<Model> intersection = new ArrayList<Model>();
	private int[] hierarchy = new int[3];//0:union, 1:difference, 2: interesection
		//1 is outest most position
	
	public Model(ArrayList<Model> u, ArrayList<Model> d, ArrayList<Model> i, int[] h){
		//TODO: check hierarchy validity
		union =u;
		difference = d;
		intersection = i;
		hierarchy=h;
	}
	
	public void translate(float x, float y, float z){
		xLoc+=x;
		yLoc+=y;
		zLoc+=z;
	}
	
	public void rotate(float x, float y, float z){
		xAngle+=x;
		yAngle+=y;
		zAngle+=z;
	}
	
	public void addUnion(Model model){
		union.add(model);
	}
	public void addDiff(Model model){
		difference.add(model);
	}
	public void addIntersection(Model model){
		intersection.add(model);
	}
	public void newHierarchy(int[] h){
		//TODO: Error Check hierarchy
		hierarchy=h;
	}
	public void enCode(){
		if(hierarchy[0]==1){
			if(hierarchy[1]==2){
				
			}
			else{//hierarchy
			}
		}
		else if(hierarchy[1]==1){
		}
		else{//2==1
		}
			
	}
	
	public String toString(){
		return code;
	}
	}
}
