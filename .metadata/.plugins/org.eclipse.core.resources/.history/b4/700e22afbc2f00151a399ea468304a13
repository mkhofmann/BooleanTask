import java.util.ArrayList;

public class Gauntlet extends Node{
	private float t;
	private DifferenceNode halfCut;
	private HullNode shell;
	
	Gauntlet(float th,float interval, int numIntervals, float[] circumfrances) {
		super(new ArrayList<Node>(1));
		t=th;
		ArrayList<DifferenceNode> shells = new ArrayList<DifferenceNode>(numIntervals);
		ArrayList<Node> cyls = new ArrayList<Node>(2);
		float r =0;
		for(int i=0; i<numIntervals; i++){//build shells
			r = circumfrances[i]/((float) (2*Math.PI));
			cyls.set(0, new CylinderModelNode(r+t, interval));
			cyls.set(1, new CylinderModelNode(r, interval));
			shells.set(i, new DifferenceNode(cyls));
		}
		
		super.addChild(halfCut);
	}
	@Override
	public String encode() {
		return halfCut.encode();
	}
	
}
